<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ahmad.fdcw.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/grass">

        <Button
            android:id="@+id/corn"
            android:layout_width="120dp"
            android:layout_height="151dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/corn"
            android:text="" />

        <Button
            android:id="@+id/duck"
            android:layout_width="120dp"
            android:layout_height="151dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/duck"
            android:text="" />

        <Button
            android:id="@+id/wolf"
            android:layout_width="120dp"
            android:layout_height="151dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/wolf"
            android:text="" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:background="@drawable/wave">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/boat">


            <Button
                android:id="@+id/farmer"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@drawable/farmer"
                android:text="" />

            <Button
                android:id="@+id/middle"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_alignBottom="@+id/farmer"

                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="#00ffffff"

                />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/grass">

        <Button
            android:id="@+id/corn1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:background="#00ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/duck1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:background="#00ffffff"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/wolf1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#00ffffff"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:id="@+id/restart"
            android:background="#00ffffff"
            android:padding="7dp"
            android:textSize="15dp"

            android:alpha="99"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>
